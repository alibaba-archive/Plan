!!! 5
html
	head
		meta(charset='utf-8')
		meta(name="viewport",content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no")
		meta(name="HandheldFriendly",content="true")
		meta(name="apple-mobile-web-app-status-bar-style", content="black")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="viewport",content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no")
		link(rel='shortcut icon', href='http://www.teambition.com/images/favicon.ico')
		link(rel='stylesheet', href='http://static.teambition.com/account/components/UI/docs/assets/css/teambition-ui.css')
		link(rel='stylesheet', href='http://static.teambition.com/account/css/form.css')
		link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/site_media/images/touch-icon-ipad.png')
		link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/site_media/images/touch-icon-ipad-retina.png')
	body
		aside.aside-bar(style='background-image: url(http://static.teambition.com/account/image/login-cover.jpg);')
			div.aside-bar-container

		section.content
			a.brand
				h1 teambition
			div.form-unit
				h2 为了目标而努力
				if form.errors
					p 用户名或密码错误
				br
				form.signup-form.form-horizontal(action='/login', method='post')
					{% csrf_token %}
					
					input.input-xlarge(type='text', placeholder='用户名', name='username')
					br
					input.input-xlarge(type='password', placeholder='密码', name='password')
					br
					input(type='hidden', name='next', value='#{next}')
					div.action-wrapper
						button.btn.btn-primary.btn-large(type='submit') 立即登录

			a.to-prev-scene(href='javascipt:void(0)')
				i.prev-icon
			a.to-next-scene(href='javascipt:void(0)')
				i.next-icon
